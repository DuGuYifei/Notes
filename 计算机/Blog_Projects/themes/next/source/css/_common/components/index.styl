.post-body p a{
  color: #0593d3;
  border-bottom: none;
  border-bottom: 1px solid #0593d3;
  &:hover {
    color: #fc6423;
    border-bottom: none;
    border-bottom: 1px solid #fc6423;
  }
}

.noscript-warning {
  background-color: lighten($red, 20%);
  color: white;
  font-family: sans-serif;
  font-size: 1rem;
  font-weight: bold;
  left: 0;
  position: fixed;
  text-align: center;
  top: 0;
  width: 100%;
  z-index: $zindex-5;
}

@import 'back-to-top';
@import 'reading-progress';

@import 'post';
@import 'pages';
@import 'third-party';
